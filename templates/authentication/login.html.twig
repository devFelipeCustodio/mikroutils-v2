{% extends 'base.html.twig' %}

{% block title %}Hello AuthenticationController!{% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('app_login') }}" method="post">
    <div class="mb-3">
        <label class="form-label" for="username">Nome de usu√°rio:</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Senha:</label>
        <input class="form-control" type="password" id="password" name="_password" required>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </div>
        <button class="btn btn-primary" type="submit">Entrar</button>
    </form>

{% endblock %}
